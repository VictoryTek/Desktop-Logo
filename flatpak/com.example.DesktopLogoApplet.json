{
  "app-id": "com.example.DesktopLogoApplet",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": ["--share=network"],
    "env": {
      "CARGO_NET_GIT_FETCH_WITH_CLI": "true"
    }
  },
  "command": "desktop-logo-applet",
  "modules": [
    {
  "name": "desktop-logo-applet",
      "buildsystem": "simple",
      "build-commands": [
        "cargo build --release -p desktop_logo_applet",
        "install -Dm755 target/release/desktop_logo_applet /app/bin/desktop-logo-applet",
        "install -Dm644 assets/logo.png /app/share/desktop-logo-applet/logo.png",
        "install -Dm644 desktop-logo.toml /app/share/desktop-logo-applet/desktop-logo.toml"
      ],
      "sources": [
        { "type": "dir", "path": ".." }
      ]
    }
  ],
  "finish-args": [
    "--share=ipc",
    "--socket=wayland",
    "--socket=x11",
    "--filesystem=home:ro"
  ]
}
